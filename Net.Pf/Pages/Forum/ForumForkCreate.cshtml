@page
@model Net.Pf.Pages.Forum.ForumForkCreateModel


<div class="container">
	<form class="form-group" method="post">

		<div class="form-group m-2">
			<label asp-for="command.Name">Название</label>
			<input type="text" class="form-control" asp-for="command.Name" value="@(Model?.command?.Name ?? "")">
		</div>

		<div class="form-group m-2">
			<label asp-for="command.Description">Описание</label>
			<input type="text" class="form-control" asp-for="command.Description" value="@(Model?.command?.Description ?? "")">
			<span asp-validation-for="command.Description" class="text-danger"></span>
		</div>
		<div class="form-group m-2">
			<input type="submit" value="Создать" />
		</div>


	</form>

</div>