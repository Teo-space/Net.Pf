	@if (@Model?.Posts.Count() > 0)
	{
		<div class="row">
			<table class="table" style="line-height: 0.7">
				@foreach (var post in @Model.Posts.Take(0))
				{
					<thead class="table-primary" style="position: sticky;top: 0">
						<tr>
							<th scope="col">@post.CreatorUserName</th>
							<th scope="col">@post.addedAt</th>
						</tr>
					</thead>

					<tbody style="max-height:30vh;">
						<tr>
							<th scope="row">@post.Text</th>
							<th scope="row">@post.Text</th>

						</tr>
						<tr>
						</tr>
					</tbody>
					<tfoot>
						XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
					</tfoot>

				}



			</table>




		</div>
	}





	@if (@Model?.Posts.Count() > 0)
	{
		<div class="row">

			@foreach (var post in @Model.Posts.Take(0))
			{
				<div class="row m-2 bg-white rounded" style="min-height:13vh;">

					<div class="row m-1 overflow-hidden " style="min-height:4vh;">
						<div class="col col-sm-2 bg-blue">
							@post.CreatorUserName
						</div>
						<div class="col bg-cyan">
							@post.CreatorUserName
						</div>
						<div class="col col-sm-1 bg-blue">
							Admin Only
						</div>
					</div>

					<div class="row m-1 overflow-hidden " style="min-height:9vh;">
						<div class="col col-sm-2 bg-blue">
							@post.CreatorUserName
						</div>
						<div class="col bg-cyan">
							@post.CreatorUserName
						</div>
						<div class="col col-sm-1 bg-blue">
							delete
						</div>
					</div>


				</div>

			}

		</div>
	}



	@if (@Model?.Posts.Count() > 0)
	{
		<div class="row">

			@foreach (var post in @Model.Posts.Take(0))
			{
				<div class="row m-1" style="min-height:12vh;">

					<div class="col col-sm-2 m-1 bg-white rounded">
						<div class="row m-2 overflow-hidden">
							@post.CreatorUserName
						</div>
						<div class="row m-2">
							ToDO: additional info
						</div>
					</div>

					<div class="col m-1 bg-white rounded">
						<div class="row">

							<div class="col m-1">
								<div class="row m-1">
