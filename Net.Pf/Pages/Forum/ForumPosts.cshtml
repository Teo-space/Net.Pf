					</div>
				</div>

			}

		</div>
	}

	@if (@Model?.Posts.Count() > 0)
	{
		<div class="row">

			@foreach (var post in @Model.Posts.Take(0))
			{
				<div class="row m-1" style="min-height:12vh;">

					<div class="col col-sm-3 m-1 bg-white rounded">
						<div class="row m-2 overflow-hidden">
